<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ipca.example.semaphore.SemaphoreView
        android:id="@+id/semaphoreView"
        android:layout_width="216dp"
        android:layout_height="385dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPassar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Passar"
        app:layout_constraintEnd_toEndOf="@+id/semaphoreView"
        app:layout_constraintStart_toStartOf="@+id/semaphoreView"
        app:layout_constraintTop_toBottomOf="@+id/semaphoreView" />
</androidx.constraintlayout.widget.ConstraintLayout>